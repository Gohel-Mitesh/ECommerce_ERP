@using Microsoft.AspNetCore.Components
@{
    Layout = "_ContentNavbarLayout";
    ViewData["Title"] = "Add Category";

}
@model ECommerce_ERP.Models.AddCategoryViewModel
@section PageScripts {
    <script>
        // var editor1 = new RichTextEditor("#inp_editor1");
        var editor1cfg = {}
        editor1cfg.toolbar = "basic";
        var editor1 = new RichTextEditor("#div_editor1", editor1cfg);
    </script>
}
<h4 class="header"><b>Add a new Category</b></h4>
<div class="row g-6">
    <div class="col-md-12">
        <div class="card">
            <h5 class="card-header">Add Category</h5>
            <div class="card-body">
                <form method="post" asp-controller="Category" asp-action="CategoryForm">
                    <input type="hidden" asp-for="CategoryId" />
                    <div class="row">
                        <div class="col-md-12 mb-4">
                            <label for="categoryTitle" class="form-label">Title</label>
                            <input type="text" class="form-control" id="categoryTitle" placeholder="Category title" asp-for="CategoryTitle"/>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="categorySlug" class="form-label">Slug</label>
                            <input type="text" class="form-control" id="categorySlug" placeholder="Enter Slug" asp-for="CategorySlug"/>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="categoryPhoto" class="form-label">Attachment</label>
                            <input class="form-control" type="file" id="categoryPhoto" asp-for="CategorImage">
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="category" class="form-label">Parent category</label>
                            <select id="category" class="form-control form-select form-select-lg select2" asp-for="CategoryParentCategory">
                                <option value="0">Select parent category</option>
                                <option value="1">Household</option>
                                <option value="2">Management</option>
                                <option value="3">Electronics</option>
                                <option value="4">Office</option>
                                <option value="5">Automotive</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-4">
                            <label for="categoryStatus" class="form-label">Category Status</label>
                            <select id="categoryStatus" class="form-control form-select form-select-lg select2" asp-for="CategoryStatus">
                                <option value="0">Select category status</option>
                                <option value="1">Scheduled</option>
                                <option value="2">Publish</option>
                                <option value="3">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-8 mb-4">
                            <label for="Description" class="form-label">Description</label>
                            <textarea id="div_editor1" class="form-control" placeholder="Category Discription" asp-for="CategoryDescription">
                        </textarea>
                        </div>
                        <div class="d-flex justify-content-center">
                            @* <button type="submit" class="btn btn-primary">Add</button> *@
                            <button type="submit" class="btn btn-primary">Add Category</button>

                            <a class="btn btn-outline-danger" style="margin-left:15px" asp-controller="Category" asp-action="Index">Discard</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>